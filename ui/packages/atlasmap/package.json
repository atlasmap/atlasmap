{
  "name": "@atlasmap/atlasmap",
  "description": "",
  "version": "2.3.0-SNAPSHOT",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.js",
  "module": "dist/atlasmap.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "tsdx watch",
    "prebuild": "node ./atlasmap.prebuild.js",
    "build:tsdx": "tsdx build",
    "build:module": "npm-run-all prebuild build:tsdx",
    "build:storybook": "build-storybook --quiet",
    "build": "npm-run-all lint test build:module",
    "test": "tsdx test --runInBand",
    "test:coverage": "tsdx test --coverage --runInBand",
    "lint": "tsdx lint src test",
    "format": "yarn lint --fix",
    "storybook": "start-storybook -p 6006"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "trailingComma": "all",
    "endOfLine": "auto"
  },
  "dependencies": {
    "@atlasmap/core": "^2.3.0-SNAPSHOT",
    "react-sage": "^0.0.42",
    "use-debounce": "^3.4.2"
  },
  "peerDependencies": {
    "@patternfly/react-core": "^4.115.2",
    "@patternfly/react-icons": "^4.10.2",
    "@patternfly/react-styles": "^4.10.2",
    "@patternfly/react-table": "^4.26.7",
    "@patternfly/react-topology": "^4.8.37",
    "d3-scale": "^3.2.0",
    "d3-shape": "^1.3.5",
    "ky": "^0.17.0",
    "lodash.clamp": "^4.0.3",
    "react": "^16.13.1",
    "react-dnd": "^10.0.2",
    "react-dnd-html5-backend": "^10.0.2",
    "react-dnd-touch-backend": "^10.0.2",
    "react-use-gesture": "^7.0.4",
    "rxjs": "^6.2.2",
    "webpack": "4.42.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@patternfly/react-core": "^4.115.2",
    "@patternfly/react-icons": "^4.10.2",
    "@patternfly/react-styles": "^4.10.2",
    "@patternfly/react-table": "^4.26.7",
    "@patternfly/react-topology": "^4.8.37",
    "@storybook/addon-actions": "^6.2.9",
    "@storybook/addon-docs": "^6.2.9",
    "@storybook/addon-knobs": "^6.2.9",
    "@storybook/addon-links": "^6.2.9",
    "@storybook/addon-viewport": "^6.2.9",
    "@storybook/addons": "^6.2.9",
    "@storybook/preset-typescript": "^3.0.0",
    "@storybook/react": "^6.2.9",
    "@testing-library/jest-dom": "^5.7.0",
    "@testing-library/react": "^10.0.4",
    "@testing-library/user-event": "^10.3.1",
    "@types/d3-scale": "2.1.1",
    "@types/d3-shape": "1.3.2",
    "@types/he": "^1.1.1",
    "@types/jest": "25.2.3",
    "@types/lodash.clamp": "^4.0.6",
    "@types/react": "16.9.34",
    "@types/react-dom": "16.9.6",
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "autoprefixer": "^10.2.5",
    "babel-loader": "^8.1.0",
    "css-loader": "^5.2.4",
    "cssnano": "^5.0.2",
    "d3-scale": "^3.2.1",
    "d3-shape": "^1.3.7",
