{
  "name": "@atlasmap/atlasmap",
  "description": "AtlasMap UI presentation layer consists of React components",
  "version": "2.4.0-SNAPSHOT",
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.js",
  "module": "dist/atlasmap.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "webpack-cli serve --mode development --hot",
    "prebuild": "node ./atlasmap.prebuild.js",
    "build:yarn": "webpack-cli build --mode production",
    "build:module": "npm-run-all prebuild build:yarn",
    "build:storybook": "build-storybook --quiet",
    "build": "npm-run-all build:module lint test",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --runInBand",
    "test:coverage": "jest test --coverage --runInBand",
    "test:watch": "yarn run test -- --watch",
    "lint": "eslint --ext .ts,.tsx,.js ./src",
    "format": "yarn lint --fix",
    "storybook": "start-storybook -p 6006"
  },
  "dependencies": {
    "@atlasmap/core": "2.4.0-SNAPSHOT"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^6.3.8",
    "@storybook/addon-docs": "^6.3.8",
    "@storybook/addon-knobs": "^6.3.0",
    "@storybook/addon-links": "^6.3.8",
    "@storybook/addon-viewport": "^6.3.8",
    "@storybook/addons": "^6.3.8",
    "@storybook/react": "^6.3.8",
    "@testing-library/jest-dom": "^5.7.0",
    "@testing-library/react": "^12.0.0",
    "@testing-library/user-event": "^14.0.4",
    "@types/hoist-non-react-statics": "^3.3.1",
    "@types/jest": "24.9.1",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.26.0",
    "autoprefixer": "^10.2.5",
    "cross-env": "^7.0.3",
    "css-loader": "^5.2.4",
    "cssnano": "^5.0.2",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-header": "^3.1.1",
    "eslint-plugin-mdx": "^1.13.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "jest-css-modules-transform": "^4.2.1",
    "jest-environment-jsdom-sixteen": "^2.0.0",
    "lodash.clamp": "^4.0.3",
    "postcss": "^8.2.15",
    "postcss-loader": "^4.2.0",
    "postcss-url": "^10.1.3",
    "prettier": "^2.5.0",
    "react-spring": "^9.1.2",
    "source-map-loader": "volune/source-map-loader#fixes",
    "style-loader": "^2.0.0",
    "ts-loader": "8.2.0",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "typed-css-modules": "^0.7.0",
    "typescript": "^3.9.10",
    "typescript-plugin-css-modules": "^3.2.0",
    "webpack-cli": "^4.9.2"
  },
  "peerDependencies": {
    "@patternfly/react-core": "^4.214.1",
    "@patternfly/react-icons": "^4.65.1",
    "@patternfly/react-styles": "^4.64.1",
    "@patternfly/react-table": "^4.83.1",
    "@patternfly/react-topology": "^4.61.1",
    "@types/d3-scale": "^4.0.0",
    "@types/d3-shape": "^3.0.0",
    "@types/he": "^1.1.1",
    "@types/react": "^17.0.5",
    "@types/react-dom": "^17.0.5",
    "d3-scale": "^3.3.0",
    "d3-shape": "^2.1.0",
    "he": "^1.2.0",
    "ky": "~0.17.0",
    "monaco-editor": "^0.28.0",
    "monaco-editor-webpack-plugin": "^4.1.2",
    "react": "^17.0.2",
    "react-dnd": "^14.0.2",
    "react-dnd-html5-backend": "^14.0.0",
    "react-dnd-touch-backend": "^14.0.0",
    "react-dom": "^17.0.2",
    "react-sage": "^0.3.1",
    "react-spring": "^9.1.2",
    "react-use-gesture": "^9.1.3",
    "rxjs": "^6.6.7",
    "use-debounce": "^7.0.0"
  },
  "resolutions": {
    "jest": "24.9.0",
    "webpack": "4.42.0"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "endOfLine": "auto"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 6,
      "ecmaFeatures": {
        "modules": true,
        "jsx": true
      },
      "jsx": true,
      "useJSXTextNode": true,
      "sourceType": "module"
    },
    "extends": [
      "prettier",
      "plugin:react/recommended"
    ],
    "plugins": [
      "@typescript-eslint",
      "header",
      "import",
      "react",
      "react-hooks"
    ],
    "ignorePatterns": "**/*.css.d.ts",
    "rules": {
      "@typescript-eslint/explicit-function-return-type": "off",
      "header/header": [
        2,
        "../../atlasmap-license-header-ui.js"
      ],
      "no-unused-vars": 0,
      "no-use-before-define": 0,
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn",
      "react/jsx-filename-extension": [
        2,
        {
          "extensions": [
            ".js",
            ".jsx",
            ".ts",
            ".tsx"
          ]
        }
      ],
      "react/jsx-uses-vars": 2,
      "react/prop-types": 0,
      "sort-imports": "error"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  }
}
