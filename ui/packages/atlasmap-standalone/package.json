{
  "name": "@atlasmap/standalone",
  "description": "AtlasMap UI standalone bootstrapper",
  "license": "Apache-2.0",
  "version": "2.4.0-SNAPSHOT",
  "private": true,
  "scripts": {
    "start": "react-scripts --max_old_space_size=4096 start",
    "build:module": "react-scripts --max_old_space_size=4096 build",
    "build": "npm-run-all build:module lint test",
    "test": "react-scripts test --watchAll=false --runInBand",
    "test:coverage": "react-scripts test --watchAll=false --coverage --runInBand",
    "eject": "react-scripts eject",
    "lint": "tsdx lint src",
    "format": "yarn lint --fix"
  },
  "dependencies": {
    "@atlasmap/atlasmap": "^2.4.0-SNAPSHOT",
    "@patternfly/react-core": "^4.147.0",
    "@patternfly/react-icons": "^4.11.8",
    "@patternfly/react-styles": "^4.11.8",
    "@patternfly/react-table": "^4.30.3",
    "@patternfly/react-topology": "^4.9.42",
    "@types/d3-scale": "^4.0.0",
    "@types/d3-shape": "^3.0.0",
    "@types/file-saver": "^2.0.2",
    "@types/pako": "^1.0.1",
    "@types/react": "^17.0.5",
    "@types/react-dom": "^17.0.5",
    "d3-scale": "^3.3.0",
    "d3-shape": "^3.1.0",
    "file-saver": "^2.0.5",
    "http-proxy-middleware": "^1.3.1",
    "ky": "~0.17.0",
    "lodash.clamp": "^4.0.3",
    "monaco-editor": "^0.30.0",
    "monaco-editor-webpack-plugin": "^7.0.0",
    "pako": "^2.0.3",
    "react": "^18.0.0",
    "react-dnd": "^15.1.0",
    "react-dnd-html5-backend": "^15.1.0",
    "react-dnd-touch-backend": "^15.1.0",
    "react-dom": "^17.0.2",
    "react-file-picker": "^0.0.6",
    "react-sage": "^0.3.1",
    "react-scripts": "^3.4.4",
    "react-use-gesture": "^9.1.3",
    "rxjs": "^6.6.7",
    "use-debounce": "^7.0.0"
  },
  "devDependencies": {
    "@types/jest": "24.9.1",
    "prettier": "^2.5.0",
    "typescript": "~3.9.9"
  },
  "resolutions": {
    "jest": "24.9.0",
    "babel-loader": "8.1.0",
    "webpack": "4.42.0"
  },
  "eslintConfig": {
    "extends": "react-app",
    "plugins": [
      "header"
    ],
    "rules": {
      "header/header": [
        2,
        "../../atlasmap-license-header-ui.js"
      ],
      "sort-imports": "error"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "endOfLine": "auto"
  },
  "jest": {
    "moduleNameMapper": {
      "ky": "ky/umd",
      "monaco-editor": "monaco-editor/esm/vs/editor/editor.api.js"
    },
    "transform": {
      "monaco-editor": "jest-esm-transformer",
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/(?!(ky|@patternfly/react-styles|monaco-editor)/)"
    ]
  }
}
