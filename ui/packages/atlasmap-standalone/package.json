{
  "name": "@atlasmap/standalone",
  "description": "AtlasMap UI standalone bootstrapper",
  "license": "Apache-2.0",
  "version": "2.6.0-SNAPSHOT",
  "private": true,
  "scripts": {
    "start": "craco start",
    "build:module": "craco build",
    "build": "npm-run-all build:module lint test",
    "test": "craco test --watchAll=false --runInBand",
    "test:coverage": "craco test --watchAll=false --coverage --runInBand",
    "eject": "react-scripts eject",
    "lint": "tsdx lint src",
    "format": "yarn lint --fix"
  },
  "dependencies": {
    "@atlasmap/atlasmap": "^2.6.0-SNAPSHOT",
    "@patternfly/react-core": "^4.224.1",
    "@patternfly/react-icons": "^4.75.1",
    "@patternfly/react-styles": "^4.74.1",
    "@patternfly/react-table": "^4.93.1",
    "@patternfly/react-topology": "^4.71.1",
    "@types/d3-scale": "^4.0.0",
    "@types/d3-shape": "^3.0.0",
    "@types/file-saver": "^2.0.2",
    "@types/pako": "^1.0.1",
    "@types/react": "^17.0.5",
    "@types/react-dom": "^17.0.5",
    "d3-scale": "^3.3.0",
    "d3-shape": "^3.1.0",
    "file-saver": "^2.0.5",
    "http-proxy-middleware": "^1.3.1",
    "ky": "~0.31.3",
    "lodash.clamp": "^4.0.3",
    "pako": "^2.0.3",
    "react": "^17.0.2",
    "react-dnd": "^15.1.2",
    "react-dnd-html5-backend": "^15.1.3",
    "react-dnd-touch-backend": "^15.1.2",
    "react-dom": "^17.0.2",
    "react-file-picker": "^0.0.6",
    "react-sage": "^0.3.1",
    "react-scripts": "^3.4.4",
    "react-use-gesture": "^9.1.3",
    "rxjs": "^6.6.7",
    "use-debounce": "^9.0.2"
  },
  "devDependencies": {
    "@craco/craco": "5.8.0",
    "@types/jest": "24.9.1",
    "typescript": "~3.9.9"
  },
  "resolutions": {
    "jest": "24.9.0",
    "babel-loader": "8.1.0",
    "prettier": "^2.3.1",
    "webpack": "4.42.0"
  },
  "eslintConfig": {
    "extends": "react-app",
    "plugins": [
      "header"
    ],
    "rules": {
      "header/header": [
        2,
        "../../atlasmap-license-header-ui.js"
      ],
      "sort-imports": "error"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "endOfLine": "auto"
  },
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest",
      "ky": "jest-esm-transformer"
    },
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/(?!(ky/.*|@patternfly/react-styles)/)"
    ]
  }
}
