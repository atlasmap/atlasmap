{
  "name": "@atlasmap/core",
  "description": "AtlasMap UI core library",
  "version": "2.4.0-SNAPSHOT",
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.js",
  "module": "dist/atlasmap-core.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "webpack-cli serve --mode development --hot",
    "build:module": "webpack-cli build --mode production",
    "build": "npm-run-all build:module lint test",
    "test": "jest --runInBand",
    "test:coverage": "jest --coverage --runInBand",
    "lint": "eslint --ext .ts,.tsx,.js ./src",
    "format": "yarn lint --fix"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@testing-library/jest-dom": "^5.7.0",
    "@testing-library/react": "^12.0.0",
    "@types/jest": "^24.9.1",
    "@types/text-encoding": "^0.0.36",
    "babel-jest": "^24.9.0",
    "canvas": "^2.8.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-header": "^3.1.1",
    "jest-esm-transformer": "^1.0.0",
    "jest-matchmedia-mock": "^1.1.0",
    "prettier": "^2.5.0",
    "text-encoding": "^0.7.0",
    "ts-jest": "^24.3.0",
    "typescript": "~3.9.9"
  },
  "peerDependencies": {
    "@types/file-saver": "^2.0.2",
    "@types/pako": "^1.0.1",
    "file-saver": "^2.0.5",
    "ky": "~0.17.0",
    "loglevel": "^1.7.1",
    "monaco-editor": "^0.28.0",
    "pako": "^2.0.3",
    "rxjs": "^6.6.7"
  },
  "resolutions": {
    "jest": "24.9.0",
    "webpack": "4.42.0"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "endOfLine": "auto"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 6,
      "ecmaFeatures": {
        "modules": true
      },
      "jsx": true,
      "useJSXTextNode": true,
      "sourceType": "module"
    },
    "extends": [
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint",
      "header",
      "import",
      "react-hooks"
    ],
    "rules": {
      "@typescript-eslint/explicit-function-return-type": "off",
      "header/header": [
        2,
        "../../atlasmap-license-header-ui.js"
      ],
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn",
      "sort-imports": "error"
    }
  }
}
