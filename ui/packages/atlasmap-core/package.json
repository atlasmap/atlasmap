{
  "name": "@atlasmap/core",
  "description": "",
  "version": "2.1.0-SNAPSHOT",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.js",
  "module": "dist/atlasmap-core.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "tsdx watch",
    "build:module": "tsdx build",
    "build": "npm-run-all build:module test",
    "test": "tsdx test --runInBand",
    "test:coverage": "tsdx test --coverage --runInBand",
    "lint": "tsdx lint src test",
    "format": "yarn lint --fix"
  },
  "peerDependencies": {
    "ky": "^0.17.0",
    "react": ">=16",
    "rxjs": "^6.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@patternfly/react-core": "^3.153.3",
    "@patternfly/react-icons": "^3.15.15",
    "@patternfly/react-styles": "^3.7.12",
    "@patternfly/react-topology": "^2.14.48",
    "@testing-library/jest-dom": "^5.7.0",
    "@testing-library/react": "^10.0.4",
    "@types/file-saver": "2.0.1",
    "@types/jest": "25.2.3",
    "@types/pako": "1.0.1",
    "@types/react": "16.9.34",
    "@types/react-dom": "16.9.6",
    "babel-loader": "^8.1.0",
    "husky": "^4.2.3",
    "ky": "^0.17.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "rxjs": "^6.5.4",
    "ts-loader": "^6.2.2",
    "tsdx": "^0.13.1",
    "tslib": "^1.11.1",
    "typescript": "~3.8.3"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(css|less)$": "<rootDir>/test/__mocks__/styleMock.js",
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/test/__mocks__/fileMock.js",
      "@src": "<rootDir>/src/index.ts",
      "@src/(.*)": "<rootDir>/src/$1",
      "@test/(.*)": "<rootDir>/test/$1"
    },
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/(?!(ky)/)"
    ]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 6,
      "ecmaFeatures": {
        "modules": true
      },
      "jsx": true,
      "useJSXTextNode": true,
      "sourceType": "module"
    },
    "extends": [
      "prettier",
      "prettier/@typescript-eslint"
    ],
    "plugins": [
      "@typescript-eslint",
      "react-hooks"
    ],
    "rules": {
      "@typescript-eslint/explicit-function-return-type": "off",
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn"
    }
  },
  "dependencies": {
    "file-saver": "2.0.2",
    "loglevel": "^1.6.7",
    "pako": "^1.0.11"
  }
}
