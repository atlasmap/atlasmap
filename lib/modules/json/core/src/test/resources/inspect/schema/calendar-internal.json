{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "A representation of an event",
  "type": "object",
  "required": [
    "dtstart",
    "summary"
  ],
  "definitions": {
    "geo": {
      "$id": "http://json-schema.org.internal/geo",
      "type": "object",
      "properties": {
        "latitude": {
          "type": "number"
        },
        "longitude": {
          "type": "number"
        }
      }
    }
  },
  "properties": {
    "dtstart": {
      "format": "date-time",
      "type": "string",
      "description": "Event starting time"
    },
    "dtend": {
      "format": "date-time",
      "type": "string",
      "description": "Event ending time"
    },
    "summary": {
      "type": "string"
    },
    "location": {
      "type": "string"
    },
    "url": {
      "type": "string",
      "format": "uri"
    },
    "duration": {
      "format": "time",
      "type": "string",
      "description": "Event duration"
    },
    "rdate": {
      "format": "date-time",
      "type": "string",
      "description": "Recurrence date"
    },
    "rrule": {
      "type": "string",
      "description": "Recurrence rule"
    },
    "category": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "geo": {
      "$ref": "http://json-schema.org.internal/geo"
    }
  }
}
